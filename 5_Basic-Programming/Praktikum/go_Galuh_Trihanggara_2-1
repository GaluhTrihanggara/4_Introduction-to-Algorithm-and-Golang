// Program Untuk Membuat Sebuah Segitiga Asterik
// By Galuh Trihanggara
package main

import "fmt"

func main() {
	segitiga()
}

//selanjutnya membuat segitiganya
func segitiga() {
	for i := 1; i <= 5; i++ {
		for j := 5; j >= i; j-- {
			fmt.Print(" ")
		}
		for k := 1; k <= i; k++ {
			fmt.Print("* ")
		}
		fmt.Println()
	}
}
